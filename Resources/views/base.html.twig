<!DOCTYPE html>
<html xmlns:fb="https://www.facebook.com/2008/fbml">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{{ article.meta('title') }}{% endblock %}</title>
        {% block metas %}
            {% for meta in article.metas %}
                {% if meta.meta.name == 'image_src' %}
                    <link rel="{{ meta.meta.name }}" href="{{ meta.content }}" />
                {% elseif meta.meta.name|slice(0, 3) == 'org:' %}
                    <meta property="{{ meta.meta.name }}" content="{{ meta.content }}" />
                {% else %}
                    <meta name="{{ meta.meta.name }}" content="{{ meta.content }}" />
                {% endif %}
            {% endfor %}
        {% endblock %}
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script type="text/javascript" src="http://code.jquery.com/jquery-2.0.1.min.js"></script>
            <script type="text/javascript" src="http://jquery-ui.googlecode.com/svn/tags/latest/ui/minified/jquery-ui.min.js"></script>
        {% endblock %}
    </body>
</html>